---
layout: 'base.njk'
pagination:
  data: projects
  size: 1
  alias: p
permalink: "projects/{{ p.title | slugify }}/"
eleventyComputed:
  title: '{{ p.title }}'
  theme: '{{ p.theme }}'
---

<section class="proj__hero">
  <h1>{{ p.title }}</h1>
  <div class="hero__tags">
    {% for tag in p.tags %}
    <span class="hero__tags__tag">{{ tag }}</span>
    {% endfor %}
  </div>
</section>
<div class="proj__cover">
  <img class="hero-cover__img" src="{{p.cover.URL}}" alt="{{p.cover.alt}}">
</div>
<section class="proj__copy-intro">
  <h2>{{p.info.prompt}}</h2>
  <div class="copy__grafs">
    <p>{{p.info.desc}}</p>
  </div>
</section>
<section class="proj__gallery">
  {% for piece in p.content %}
  <img class="hero-cover__img" src="{{ piece.item.URL }}" alt="{{ piece.item.alt }}">
  {% endfor %}
</section>