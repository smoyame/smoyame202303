<section class="main__work" id="work">
	<h2 class="work__heading">My Work</h2>

	<ul class="work__gallery">
		{% for project in projects %}
		<li class="proj-card start{{project.placement.start}} end{{project.placement.end}}">
			<a class="proj-card__linked-wrapper" href="projects/{{ project.title | slugify }}">
				<div class="proj-card__copy">
					<h3 class="proj-card__title">{{project.title}}</h3>
					<p class="proj-card__tag">{{project.tags[0]}}</p>
				</div>
				<div class="image-wrapper"><img class="image" src="{{ project.coverURL }}" alt="{{ project.cover.alt }}" class="proj-card__img"></div>
			</a>
		</li>
		{% endfor %}
	</ul>
</section>